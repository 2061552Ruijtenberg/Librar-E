@model IEnumerable<LibraryCollectionWebApplication.Models.Collection>

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Collection</h4>
    <hr />
    <dl class="row">
        @foreach(var item in Model)
        {
            <dt class="col-sm-2">
                @item.Book?.Title
            </dt>
            <dd class="col-sm-10">
                @item.Book?.Author
            </dd>
        }

    </dl>
</div>
<div>
    <a asp-controller="Users" asp-action="Index">Back to List</a>
</div>

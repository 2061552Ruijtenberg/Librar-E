@model IEnumerable<LibraryCollectionWebApplication.Models.Collection>


@{
    ViewData["Title"] = "Details";
}

@* <h1>@Html.DisplayFor(model => model.Name)</h1> *@

<div>
    <hr />
    <table class ="table table-hover">
        <thead class="table-primary">
            <tr>
            <tr>
                <th @* rowspan="@(Model.Books.Count + 1)" *@>
                    Book Collection
                </th>
                    @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        <a class="a-dark" asp-area="" asp-controller="Books" asp-action="Details" asp-route-id="@item.BookID">@item.Book?.Title</a>
                    </td>
                </tr>
                    }
            </tr>
        </thead>
    </table>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

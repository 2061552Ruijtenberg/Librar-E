@model IEnumerable<LibraryCollectionWebApplication.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
            <tr class="table-secondary">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a class="a-dark" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="a-dark" asp-controller="Collections" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="a-dark" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
    </tbody>
</table>
